{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets"],
      "@scripts/*": ["src/scripts"],
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": ["node_modules", ".astro", "dist"]
}
